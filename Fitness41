<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Elite41 Power Tracker</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap');
        html, body { height: 100%; width: 100%; margin: 0; padding: 0; overflow: hidden; background-color: #ffffff; font-family: 'Inter', sans-serif; -webkit-tap-highlight-color: transparent; touch-action: manipulation; }
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .compact-toggle-btn { display: flex; align-items: center; justify-content: center; padding: 6px 12px; border-radius: 8px; font-size: 10px; font-weight: 800; transition: all 0.2s; border: 1px solid #e2e8f0; background: #f8fafc; color: #64748b; }
        .compact-toggle-btn.active { background: #2563eb; border-color: #2563eb; color: white; }
        .compact-toggle-btn.active-orange { background: #f97316; border-color: #f97316; color: white; }
        .set-btn { height: 52px; border-width: 2.5px; transition: all 0.1s ease; border-style: solid; }
        .progress-bar-container { height: 3px; width: 100%; background: #f1f5f9; }
        .progress-bar-fill { height: 100%; background: #2563eb; transition: width 0.5s ease; width: 0%; }
        .dimmed { opacity: 0.4; filter: grayscale(0.5); pointer-events: none; }
    </style>
</head>
<body class="flex flex-col h-full bg-white">

    <header class="px-4 pt-3 pb-2 flex flex-col gap-3 shadow-sm">
        <div class="flex justify-between items-center">
            <h1 class="text-[11px] font-black uppercase flex items-center gap-1">
                <i data-lucide="zap" class="text-blue-600 w-3.5 h-3.5"></i> ELITE41
            </h1>
            <div class="flex gap-2">
                <button id="timer-display" class="px-3 py-1.5 rounded-full text-xs font-black bg-slate-100 text-slate-500">60s</button>
                <select id="rest-preset" class="bg-slate-100 text-[10px] rounded-full px-2 outline-none">
                    <option value="60">1m</option>
                    <option value="90">1.5m</option>
                </select>
            </div>
        </div>
        <div class="flex gap-1">
            <button id="travel-toggle" class="compact-toggle-btn">TRAVEL</button>
            <button id="super-toggle" class="compact-toggle-btn active">SUPER</button>
            <button id="pre-toggle" class="compact-toggle-btn">PRE</button>
        </div>
    </header>

    <div class="progress-bar-container">
        <div id="progress-fill" class="progress-bar-fill"></div>
    </div>

    <main class="flex-1 overflow-y-auto px-4 py-4 space-y-4 scrollbar-hide">
        <div class="bg-slate-900 rounded-2xl p-4 flex justify-between items-center text-white">
            <button id="prev-day" class="p-1"><i data-lucide="chevron-left"></i></button>
            <span id="day-title" class="text-[10px] font-black uppercase tracking-widest">Day 1</span>
            <button id="next-day" class="p-1"><i data-lucide="chevron-right"></i></button>
        </div>

        <div id="exercise-list" class="space-y-4">
            <!-- Content injected via JS -->
        </div>

        <button id="complete-btn" class="w-full py-5 bg-blue-600 text-white rounded-2xl font-black uppercase text-xs mb-8">Complete Workout</button>
    </main>

    <script>
        // Data Structure
        const PHASES = [
            { name: "Phase A", days: [
                { title: "Day 1: Posterior & Pull", exercises: [
                    { id: "tbdl", name: "Trap Bar Deadlift", alt: "DB Suitcase DL", reps: "5-8" },
                    { id: "dbrow", name: "DB One-Arm Row", reps: "10-12" },
                    { id: "dbgoblet", name: "DB Goblet Squat", reps: "12-15" },
                    { id: "dboh", name: "DB Overhead Press", reps: "8-10" }
                ]},
                { title: "Day 2: Chest & Core", exercises: [
                    { id: "dbbench", name: "DB Bench Press", reps: "8-10" },
                    { id: "tbrdl", name: "Trap Bar RDL", alt: "DB RDL", reps: "10-12" },
                    { id: "dbcsr", name: "DB Chest Supported Row", reps: "10-12" },
                    { id: "dbren", name: "DB Renegade Rows", reps: "8/side" }
                ]},
                { title: "Day 3: Legs & Stability", exercises: [
                    { id: "tbsquat", name: "Trap Bar Squat", alt: "DB Goblet Squat", reps: "8-10" },
                    { id: "dbinc", name: "DB Incline Bench Press", reps: "10-12" },
                    { id: "dbbulg", name: "DB Bulgarian Split Squat", reps: "8-10" },
                    { id: "dbcurls", name: "DB Bicep Curls", reps: "12-15" }
                ]}
            ]}
        ];

        // State Management
        let state = {
            phase: 0,
            day: 0,
            travel: localStorage.getItem('e41_travel') === 'true',
            super: localStorage.getItem('e41_super') !== 'false',
            pre: localStorage.getItem('e41_pre') === 'true',
            history: JSON.parse(localStorage.getItem('e41_history') || '{}'),
            session: JSON.parse(localStorage.getItem('e41_session') || '{}'),
            timer: 60,
            timerActive: false,
            restPreset: parseInt(localStorage.getItem('e41_rest') || '60')
        };

        // DOM Elements
        const el = {
            list: document.getElementById('exercise-list'),
            dayTitle: document.getElementById('day-title'),
            progress: document.getElementById('progress-fill'),
            timer: document.getElementById('timer-display'),
            restSelect: document.getElementById('rest-preset')
        };

        // Functions
        function save() {
            localStorage.setItem('e41_travel', state.travel);
            localStorage.setItem('e41_super', state.super);
            localStorage.setItem('e41_pre', state.pre);
            localStorage.setItem('e41_history', JSON.stringify(state.history));
            localStorage.setItem('e41_session', JSON.stringify(state.session));
            localStorage.setItem('e41_rest', state.restPreset);
        }

        function render() {
            const day = PHASES[state.phase].days[state.day];
            el.dayTitle.innerText = day.title;
            
            // Toggles
            document.getElementById('travel-toggle').className = `compact-toggle-btn ${state.travel ? 'active' : ''}`;
            document.getElementById('super-toggle').className = `compact-toggle-btn ${state.super ? 'active' : ''}`;
            document.getElementById('pre-toggle').className = `compact-toggle-btn ${state.pre ? 'active-orange' : ''}`;

            // List
            el.list.innerHTML = day.exercises.map(ex => `
                <div class="bg-white rounded-2xl border-2 border-slate-100 p-4">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="font-black text-sm">${state.travel && ex.alt ? ex.alt : ex.name}</h3>
                            <p class="text-[10px] text-slate-400 font-bold uppercase">${ex.reps} REPS</p>
                        </div>
                        <input type="number" placeholder="LBS" class="w-16 bg-slate-50 border-none rounded-lg p-2 text-right text-xs font-black outline-none" 
                            value="${state.history[ex.id] || ''}" 
                            oninput="updateWeight('${ex.id}', this.value)">
                    </div>
                    <div class="flex gap-2">
                        ${[1, 2, 3].map(set => {
                            const key = `${ex.id}-${set}`;
                            const done = state.session[key];
                            return `<button onclick="toggleSet('${key}')" class="flex-1 set-btn rounded-xl font-black text-xs ${done ? 'bg-blue-600 border-blue-600 text-white' : 'bg-slate-50 border-slate-100 text-slate-300'}">${done ? 'âœ“' : set}</button>`;
                        }).join('')}
                    </div>
                </div>
            `).join('');

            updateProgress();
            lucide.createIcons();
        }

        function updateWeight(id, val) {
            state.history[id] = val;
            save();
        }

        function toggleSet(key) {
            state.session[key] = !state.session[key];
            if (state.session[key]) startTimer();
            save();
            render();
        }

        function updateProgress() {
            const day = PHASES[state.phase].days[state.day];
            const total = day.exercises.length * 3;
            const done = Object.keys(state.session).filter(k => state.session[k]).length;
            el.progress.style.width = `${(done / total) * 100}%`;
        }

        function startTimer() {
            state.timer = state.restPreset;
            state.timerActive = true;
            el.timer.classList.replace('bg-slate-100', 'bg-orange-500');
            el.timer.classList.replace('text-slate-500', 'text-white');
        }

        // Timer Loop
        setInterval(() => {
            if (state.timerActive) {
                state.timer--;
                el.timer.innerText = state.timer + 's';
                if (state.timer <= 0) {
                    state.timerActive = false;
                    el.timer.classList.replace('bg-orange-500', 'bg-slate-100');
                    el.timer.classList.replace('text-white', 'text-slate-500');
                    el.timer.innerText = state.restPreset + 's';
                }
            }
        }, 1000);

        // Event Listeners
        document.getElementById('travel-toggle').onclick = () => { state.travel = !state.travel; save(); render(); };
        document.getElementById('super-toggle').onclick = () => { state.super = !state.super; save(); render(); };
        document.getElementById('pre-toggle').onclick = () => { state.pre = !state.pre; save(); render(); };
        document.getElementById('prev-day').onclick = () => { state.day = Math.max(0, state.day - 1); render(); };
        document.getElementById('next-day').onclick = () => { state.day = Math.min(2, state.day + 1); render(); };
        el.restSelect.onchange = (e) => { state.restPreset = parseInt(e.target.value); el.timer.innerText = state.restPreset + 's'; save(); };
        document.getElementById('complete-btn').onclick = () => { if(confirm("Finish?")) { state.session = {}; save(); location.reload(); }};

        // Init
        render();
    </script>
</body>
</html>
